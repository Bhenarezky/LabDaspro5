program Tabung;
uses crt;
var
    t,DiameterAlas:integer;
    luas,volume,r:real;
const phi=3.1416;

begin clrscr;
    write('input Diameter Alas :');
    readln(DiameterAlas);
    write('input t :');
    readln(t);
    r:=DiameterAlas/2;
    volume:=phi*r*r*t;
    luas:=2*phi*r*(r+t);
    writeln('volume Lngkaran :',volume:0:3);
    writeln('Luas lingkaran :',luas:0:4);
end.
